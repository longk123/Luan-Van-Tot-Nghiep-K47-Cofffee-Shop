// Helper ƒë·ªÉ nh√≥m b√†n theo khu v·ª±c
function groupTablesByArea(tables) {
  const groups = {};
  tables.forEach(table => {
    const areaName = table.khu_vuc || table.khu_vuc_ten || 'Kh√°c';
    if (!groups[areaName]) {
      groups[areaName] = [];
    }
    groups[areaName].push(table);
  });
  return groups;
}

